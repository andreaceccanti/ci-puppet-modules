#!/bin/sh

set -e

java_home=<%= @java_home %>

java_alternative=$(update-alternatives --display java | grep '^/' | grep $java_home | sed 's/\(.*\) - .*/\1/')
javac_alternative=$(update-alternatives --display javac | grep '^/' | grep $java_home | sed 's/\(.*\) - .*/\1/')

update-alternatives --set javac ${javac_alternative}
update-alternatives --set java ${java_alternative}
